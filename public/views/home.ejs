<% include partials/head %>
  <body ng-controller="ClientController as clientCtrl">

    <header>
    Visit <a href="/server" >serve.musicserver.com</a> to start a server.
    </header>

    <br>

    <form name="songSeachForm" ng-submit="clientCtrl.musicSearch()" novalidate>

      <input type="text" ng-model="clientCtrl.searchText" placeholder="Seach Soundcloud..." />

      <input type="submit" value="Search" />


    </form>

    <ul>
      <li ng-repeat="song in clientCtrl.searchResults">

        <img ng-src={{song.artwork_url}} />
        <span class="song-title">{{song.title}}</span>

        <a ng-click="clientCtrl.addSong(song)">Add Song</a>

      </li>
    </ul>


  </body>

</html>
