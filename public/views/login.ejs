<!DOCTYPE html>
<html ng-app="musicServer">
  <head>
    <title>Music Server</title>
    <script type="text/javascript" src="/components/angular/angular.min.js"></script>
    <script type="text/javascript" src="/js/app.js"></script>
  </head>

  <body>
    <header>
      <% if (user) { %>
        Log Out
      <% } else  {%>
        Sign Up
        Log In
      <% } %>
    </header>
    <main>



          <section ng-controller="LogInController as loginCtrl">

            <p>{{loginCtrl.serverMessage}}</p>

            <form name="signUpForm" ng-submit="signUpForm.$valid && loginCtrl.signUp()" novalidate>


              <fieldset>
                Email:
                <input type="email" ng-model="loginCtrl.email" name="email" required />

                Password:
                <input type="password" ng-model="loginCtrl.password" name="password" required />

                Confirm Password:
                <input type="password" ng-model="loginCtrl.confirmation" name="confirmation" required />

                <input type="submit" value="Sign Up" />
              </fieldset>
            </form>

            <form name="logInForm" ng-submit="logInForm.$valid" novalidate>

              <fieldset>
                Email:
                <input type="email" ng-model="loginCtrl.email" name="email" required />
                Password:
                <input type="password" ng-model="loginCtrl.password" name="password" required />

                <input type="submit" value="Sign Up" />

              </fieldset>
            </form>
          </section>


    </main>
  </body>



</html>
